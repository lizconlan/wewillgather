@model Gather.Web.Models.SuccessStory.SuccessStoryModel
@using Gather.Web.Framework.UI;
@{
    Html.AddTitleParts("Edit Blog");
    Html.Heading("Edit Blog");
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="side-edit-panel">
        <div class="edit-panel">
            <h2>Save</h2>
            <div class="panel-content">
                <div class="inner-content">
                    <table class="info-table">
                        <tr>
                            <td>Creation Date:</td>
                            <td>@Model.CreatedDate</td>
                        </tr>
                    </table>
                    <input type="submit" name="save" value="Update" class="button blue" />
                    <input type="submit" name="save" value="@(Model.Active ? "Unpublish" : "Publish")" class="button grey" />
                </div>
            </div>
        </div>
        
        @Html.Partial("_Files", Model)
    </div>
    
    @Html.Partial("_CreateOrUpdate", Model)
}